{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["APP", "NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": [".eslintcache", ".stylelintcache"]
    },
    "lint-fix": {},
    "test": {
      "dependsOn": ["build"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
