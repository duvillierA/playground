{
  "extends": "@repo/tsconfig/apps",
  "allowJs": true,
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "module": "ES6",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "incremental": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "package.json",
    "dist"
  ],
  "include": [
    "*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}
